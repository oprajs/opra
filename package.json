  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git"
  },
  "workspaces": [
    "packages/**",
    "examples/_lib/*",
    "examples/*"
  ],
  "scripts": {
    "preclean": "rimraf build coverage",
    "clean": "rman run clean",
    "build": "rman build",
    "test": "jest --passWithNoTests",
    "precover": "rimraf coverage",
    "cover": "jest --passWithNoTests --coverage",
    "format": "prettier . --write --log-level=warn",
    "precitest": "rimraf coverage",
    "citest": "node --expose-gc ./node_modules/.bin/jest --passWithNoTests --runInBand --logHeapUsage --coverage --coverageReporters=lcov --testTimeout=30000",
    "prepare": "husky"
  },
