    "@types/node": "^22.10.1",
    "@types/supertest": "^6.0.2",
    "babel-jest": "^29.7.0",
    "chalk": "^5.3.0",
    "esbuild": "^0.24.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-preset-angular": "^14.4.2",
    "globals": "^15.13.0",
