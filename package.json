  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git"
  },
  "workspaces": [
    "packages/**",
    "examples/_lib/*",
    "examples/*"
  ],
  "scripts": {
    "preclean": "rimraf build coverage",
    "clean": "rman run clean",
    "build": "rman build",
