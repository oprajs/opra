{
  "name": "opra",
  "description": "Open Protocol for Restful Api",
  "private": true,
  "version": "0.0.2",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git"
  },
  "workspaces": [
    "packages/**",
    "examples/_lib/*",
    "examples/*"
  ],
  "scripts": {
    "preclean": "rimraf build coverage",
    "clean": "rman run clean",
    "build": "rman build",
    "test": "jest --passWithNoTests",
    "precover": "rimraf coverage",
    "cover": "jest --passWithNoTests --coverage",
    "format": "prettier . --write --log-level=warn",
    "precitest": "rimraf coverage",
    "citest": "node --expose-gc ./node_modules/.bin/jest --passWithNoTests --runInBand --logHeapUsage --coverage --coverageReporters=lcov --testTimeout=30000",
    "prepare": "husky"
  },
  "devDependencies": {
    "@jest/test-sequencer": "^29.7.0",
    "@panates/eslint-config": "^1.0.3",
    "@panates/eslint-config-ts": "^1.0.3",
    "@panates/tsconfig": "^1.0.3",
    "@rollup-extras/plugin-clean": "^1.3.9",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-inject": "^5.0.5",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-strip": "^3.0.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@types/supertest": "^6.0.2",
    "babel-jest": "^29.7.0",
    "chalk": "^5.3.0",
    "esbuild": "^0.22.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-preset-angular": "^14.1.1",
    "madge": "^7.0.0",
    "npm-run-path": "^5.3.0",
    "prettier": "^3.3.2",
    "putil-varhelpers": "^1.6.5",
    "rimraf": "^5.0.7",
    "rollup": "^4.18.0",
    "rollup-plugin-command": "^1.1.3",
    "rollup-plugin-filesize": "^10.0.0",
    "ts-cleanup": "^0.3.2",
    "ts-jest": "^29.1.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^11.0.0-beta.1",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.3",
    "typescript": "5.4.5"
  }
}
