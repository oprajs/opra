{
  "name": "opra",
  "description": "Open Protocol for Restful Api",
  "private": true,
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git"
  },
  "workspaces": [
    "packages/*",
    "examples/_lib/*",
    "examples/*"
  ],
  "scripts": {
    "preclean": "rimraf build coverage",
    "clean": "rman run clean",
    "build": "rman build",
    "test": "mocha",
    "precover": "rimraf coverage",
    "format": "prettier . --write --log-level=warn",
    "precitest": "rimraf coverage reports",
    "citest": "c8 mocha",
    "qc": "rman run lint && rman run check",
    "lint": "rman run lint",
    "lint:fix": "rman run lint:fix",
    "check": "rman run check",
    "prepare": "husky"
  },
  "devDependencies": {
    "@panates/eslint-config": "^2.0.4",
    "@panates/eslint-config-ts": "^2.0.4",
    "@panates/tsconfig": "^2.0.4",
    "@swc/core": "^1.11.24",
    "@swc/helpers": "^0.5.17",
    "@swc-node/register": "^1.10.10",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.17",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "^6.0.3",
    "c8": "^10.1.3",
    "chalk": "^5.4.1",
    "esbuild": "^0.25.4",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "madge": "^8.0.0",
    "mocha": "^11.2.2",
    "npm-check-updates": "^18.0.1",
    "npm-run-path": "^6.0.0",
    "prettier": "^3.5.3",
    "putil-varhelpers": "^1.6.5",
    "rimraf": "^6.0.1",
    "ts-cleanup": "^1.3.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  }
}
