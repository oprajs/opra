{
  "name": "@opra/sqb",
  "version": "0.2.0",
  "description": "Opra SQB adapter package",
  "author": "Panates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/sqb"
  },
  "scripts": {
    "compile": "tsc",
    "prebuild": "npm run lint && npm run clean",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json",
    "postbuild": "cp README.md package.json ../../LICENSE ../../build/sqb && cp ../../package.cjs.json ../../build/sqb/cjs/package.json",
    "lint": "eslint .",
    "test": "jest",
    "cover": "jest --collect-coverage",
    "clean": "npm run clean:src && npm run clean:dist && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all",
    "clean:dist": "rimraf ../../build/sqb",
    "clean:cover": "rimraf ../../coverage/sqb"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "ts-gems": "^2.2.0"
  },
  "devDependencies": {
    "@sqb/builder": "^4.5.3",
    "@sqb/connect": "^4.5.3",
    "@faker-js/faker": "^7.5.0",
    "@sqb/postgres": "^4.5.4",
    "async-mutex": "^0.4.0",
    "postgresql-client": "^2.5.1"
  },
  "peerDependencies": {
    "@opra/core": "^0.2.0",
    "@opra/exception": "^0.2.0",
    "@opra/optionals": "^0.2.0",
    "@opra/url": "^0.2.0",
    "@sqb/connect": ">= 4.5.4"
  },
  "type": "module",
  "types": "esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "default": "./esm/index.js"
    },
    "./cjs": "./cjs/index.js",
    "./esm": "./esm/index.js"
  },
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "opra",
    "sqb",
    "adapter"
  ]
}
