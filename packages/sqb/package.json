{
  "name": "@opra/sqv",
  "version": "0.0.1",
  "description": "Opra SQB adapter package",
  "author": "Panates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/sqb"
  },
  "scripts": {
    "compile": "tsc",
    "prebuild": "npm run check | npm run lint | npm run clean",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json && tsc-esm -p tsconfig-build-esm.json",
    "postbuild": "copyfiles README.md package.json ../../LICENSE ../../build/sqb | cp ../../package.cjs.json ../../build/sqb/cjs/package.json",
    "lint": "eslint {src,test}/**/*.ts --no-error-on-unmatched-pattern",
    "test": "jest",
    "cover": "jest --collect-coverage",
    "check": "madge --circular src/**/*",
    "clean": "npm run clean:src | npm run clean:dist | npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all",
    "clean:dist": "rimraf ../../build/sqb",
    "clean:cover": "rimraf ../../coverage/sqb"
  },
  "dependencies": {
    "lodash": "^4.17.x",
    "ts-gems": "^2.2.0"
  },
  "peerDependencies": {
    "@opra/core": "0.x.x",
    "@sqb/connect": "4.x.x",
    "@sqb/sqljs": "4.x.x"
  },
  "type": "module",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "default": "./esm/index.js"
    },
    "./cjs": "./cjs/index.js",
    "./esm": "./esm/index.js"
  },
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "opra",
    "sqb",
    "adapter"
  ]
}
