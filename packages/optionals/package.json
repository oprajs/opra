{
  "name": "@opra/optionals",
  "version": "0.7.0",
  "description": "Optional dependency imports",
  "author": "Panates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/optionals"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "mkdir -p ../../build/optionals && cp -R ./ ../../build/optionals",
    "postbuild": "cp ../../LICENSE ../../build/optionals && cp ../../package.cjs.json ../../build/optionals/cjs/package.json",
    "clean": "npm run clean:dist | npm run clean:cover",
    "clean:dist": "rimraf ../../build/optionals",
    "clean:cover": "rimraf ../../coverage/optionals"
  },
  "devDependencies": {
    "@nestjs/common": "^9.2.1",
    "class-validator": "^0.13.2"
  },
  "type": "module",
  "types": "esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "default": "./esm/index.js"
    },
    "./cjs": "./cjs/index.js",
    "./esm": "./esm/index.js"
  },
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "cjs/",
    "esm/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "opra",
    "dependencies"
  ]
}