{
  "name": "@opra/common",
  "version": "0.16.1",
  "description": "Opra internationalization package",
  "author": "Panates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/common"
  },
  "scripts": {
    "compile": "tsc",
    "prebuild": "npm run check && npm run lint && npm run clean",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json",
    "postbuild": "cp package.json ../../LICENSE ../../build/common && cp ../../package.cjs.json ../../build/common/cjs/package.json",
    "lint": "eslint . --max-warnings=0",
    "check": "madge --circular src/**",
    "test": "jest",
    "cover": "jest --collect-coverage",
    "clean": "npm run clean:src && npm run clean:dist && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all && ts-cleanup -s test --all",
    "clean:dist": "rimraf ../../build/common",
    "clean:cover": "rimraf ../../coverage/common",
    "antlr4": "java -jar ./tools/antlr4-4.11.2-SNAPSHOT-complete.jar -Dlanguage=TypeScript ./src/filter/antlr/OpraFilter.g4 -visitor"
  },
  "dependencies": {
    "@browsery/antlr4": "^0.2.0",
    "accepts": "^1.3.8",
    "content-disposition": "^0.5.4",
    "cookie": "^0.5.0",
    "cookie-signature": "^1.0.7",
    "dayjs": "^1.11.7",
    "encodeurl": "^1.0.2",
    "fast-tokenizer": "^1.2.2",
    "highland": "^2.13.5",
    "http-parser-js": "^0.5.8",
    "i18next": "^22.4.15",
    "lodash.omit": "^4.5.0",
    "mime-types": "^2.1.35",
    "putil-isplainobject": "^1.1.5",
    "putil-merge": "^3.10.3",
    "putil-promisify": "^1.10.0",
    "putil-varhelpers": "^1.6.5",
    "reflect-metadata": "^0.1.13",
    "type-is": "^1.6.18",
    "uid": "^2.0.1"
  },
  "devDependencies": {
    "@types/accepts": "^1.3.5",
    "@types/content-disposition": "^0.5.5",
    "@types/cookie": "^0.5.1",
    "@types/cookie-signature": "^1.1.0",
    "@types/encodeurl": "^1.0.0",
    "@types/mime-types": "^2.1.1",
    "@types/type-is": "^1.6.3",
    "ts-gems": "^2.3.0"
  },
  "type": "module",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "default": "./esm/index.js"
    }
  },
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "umd/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "opra",
    "common"
  ]
}