{
  "name": "@opra/common",
  "version": "1.10.0",
  "description": "Opra common package",
  "author": "Panates",
  "license": "MIT",
  "scripts": {
    "compile": "tsc --noEmit",
    "prebuild": "npm run check && npm run lint && npm run clean",
    "build": "npm run build:cjs && npm run build:esm && npm run build:browser",
    "build:cjs": "tsc -b tsconfig-build-cjs.json && cp ../../support/package.cjs.json ../../build/common/cjs/package.json",
    "build:esm": "tsc -b tsconfig-build-esm.json && cp ../../support/package.esm.json ../../build/common/esm/package.json",
    "build:browser": "node esbuild.mjs",
    "postbuild": "cp package.json ../../LICENSE ../../build/common && node ../../support/postbuild.cjs",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --max-warnings=0 --fix",
    "format": "prettier . --write --log-level=warn",
    "check": "madge --circular src/**",
    "test": "jest --passWithNoTests",
    "cover": "jest --passWithNoTests --collect-coverage",
    "clean": "npm run clean:src && npm run clean:test && npm run clean:dist && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all",
    "clean:test": "ts-cleanup -s test --all",
    "clean:dist": "rimraf ../../build/common",
    "clean:cover": "rimraf ../../coverage/common",
    "antlr4": "java -jar ./tools/antlr-4.13.2-complete.jar -Dlanguage=TypeScript ./src/filter/antlr/OpraFilter.g4 -visitor"
  },
  "dependencies": {
    "@browsery/antlr4": "^4.13.3-r4",
    "@browsery/highland": "^2.13.6-r4",
    "@browsery/http-parser": "^0.5.9-r4",
    "@browsery/i18next": "^24.2.1-r1",
    "@browsery/type-is": "^1.6.18-r8",
    "@jsopen/objects": "^1.5.0",
    "fast-tokenizer": "^1.7.0",
    "putil-promisify": "^1.10.1",
    "putil-varhelpers": "^1.6.5",
    "reflect-metadata": "^0.2.2",
    "super-fast-md5": "^1.0.3",
    "tslib": "^2.8.1",
    "uid": "^2.0.2",
    "valgen": "^5.13.0"
  },
  "devDependencies": {
    "@browsery/fs": "^0.5.1-r1",
    "@browsery/stream": "^4.7.0-r1",
    "@browsery/util": "^0.12.6-r2",
    "@types/encodeurl": "^1.0.2",
    "@types/validator": "^13.12.2",
    "path-browserify": "^1.0.1",
    "ts-gems": "^3.11.3"
  },
  "type": "module",
  "exports": {
    ".": {
      "browser": {
        "import": {
          "types": "./types/index.d.ts",
          "default": "./browser/index.mjs"
        },
        "require": {
          "types": "./types/index.d.cts",
          "default": "./browser/index.cjs"
        },
        "default": "./browser/index.mjs"
      },
      "import": {
        "types": "./types/index.d.ts",
        "default": "./esm/index.js"
      },
      "require": {
        "types": "./types/index.d.cts",
        "default": "./cjs/index.js"
      },
      "default": "./esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/common"
  },
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "cjs/",
    "esm/",
    "browser/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "opra",
    "common"
  ]
}