{
  "name": "@opra/common",
  "version": "0.7.0",
  "description": "Opra internationalization package",
  "author": "Panates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/common"
  },
  "scripts": {
    "compile": "tsc",
    "prebuild": "npm run check && npm run lint && npm run clean",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json",
    "postbuild": "cp package.json ../../LICENSE ../../build/common && cp ../../package.cjs.json ../../build/common/cjs/package.json",
    "lint": "eslint . --max-warnings=0",
    "check": "madge --circular src/**",
    "test": "jest --runInBand --detectOpenHandles",
    "cover": "jest --collect-coverage",
    "clean": "npm run clean:src && npm run clean:dist && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all",
    "clean:dist": "rimraf ../../build/common",
    "clean:cover": "rimraf ../../coverage/common"
  },
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4",
    "fast-tokenizer": "^1.2.0",
    "highland": "^2.13.5",
    "http-parser-js": "^0.5.8",
    "i18next": "^22.4.6",
    "lodash": "^4.17.21",
    "luxon": "^3.1.1",
    "putil-isplainobject": "^1.1.4",
    "putil-merge": "^3.9.0",
    "putil-promisify": "^1.8.5",
    "putil-varhelpers": "^1.6.4",
    "reflect-metadata": "^0.1.13",
    "uid": "^2.0.1"
  },
  "devDependencies": {
    "ts-gems": "^2.3.0"
  },
  "type": "module",
  "types": "esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./browser/opra-common.min.cjs",
      "default": "./browser/opra-common.min.mjs"
    }
  },
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "umd/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "opra",
    "common"
  ]
}
