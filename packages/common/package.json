{
  "name": "@opra/common",
  "version": "1.22.5",
  "description": "Opra common package",
  "author": "Panates",
  "license": "MIT",
  "scripts": {
    "compile": "tsc --noEmit",
    "prebuild": "npm run check && npm run lint && npm run clean",
    "build": "tsc -b tsconfig-build.json && node esbuild.mjs",
    "postbuild": "node ../../support/postbuild.cjs",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --max-warnings=0 --fix",
    "format": "prettier . --write --log-level=warn",
    "check": "madge --circular src/**",
    "test": "mocha",
    "clean": "npm run clean:src && npm run clean:test && npm run clean:build && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all",
    "clean:test": "ts-cleanup -s test --all",
    "clean:build": "rimraf build *.tsbuildinfo",
    "clean:cover": "rimraf ../../coverage/common",
    "antlr4": "java -jar ./tools/antlr-4.13.2-complete.jar -Dlanguage=TypeScript ./src/filter/antlr/OpraFilter.g4 -visitor"
  },
  "dependencies": {
    "@browsery/antlr4": "^4.13.3-r4",
    "@browsery/highland": "^2.13.6-r4",
    "@browsery/http-parser": "^0.5.10-r2",
    "@browsery/i18next": "^25.6.0",
    "@browsery/type-is": "^2.0.1",
    "@jsopen/objects": "^2.0.2",
    "fast-tokenizer": "^1.9.0",
    "object-hash": "^3.0.0",
    "putil-promisify": "^1.10.1",
    "putil-varhelpers": "^1.6.5",
    "reflect-metadata": "^0.2.2",
    "super-fast-md5": "^1.0.3",
    "tslib": "^2.8.1",
    "uid": "^2.0.2",
    "valgen": "^5.19.3"
  },
  "devDependencies": {
    "@browsery/fs": "^0.5.1-r1",
    "@browsery/stream": "^4.7.0-r1",
    "@browsery/util": "^0.12.6-r2",
    "@types/encodeurl": "^1.0.3",
    "@types/object-hash": "^3.0.6",
    "@types/validator": "^13.15.10",
    "expect": "^30.2.0",
    "path-browserify": "^1.0.1",
    "ts-gems": "^3.11.3"
  },
  "type": "module",
  "module": "./index.js",
  "browser": "./browser.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./index.d.ts",
        "default": "./index.js"
      },
      "browser": {
        "types": "./index.d.ts",
        "default": "./browser.js"
      },
      "default": "./index.js"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=20.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/panates/opra.git",
    "directory": "packages/common"
  },
  "keywords": [
    "opra",
    "common"
  ],
  "publishConfig": {
    "access": "public"
  }
}