{
  "name": "@opra/cli",
  "version": "1.22.0",
  "description": "Opra CLI tools",
  "author": "Panates",
  "license": "MIT",
  "scripts": {
    "compile": "tsc --noEmit",
    "prebuild": "npm run check && npm run lint && npm run clean",
    "build": "tsc -b tsconfig-build.json",
    "postbuild": "node ../../support/postbuild.cjs && cp -R bin ./build/bin",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --max-warnings=0 --fix",
    "format": "prettier . --write --log-level=warn",
    "check": "madge --circular src/**",
    "test": "mocha",
    "clean": "npm run clean:src && npm run clean:test && npm run clean:build && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all",
    "clean:test": "ts-cleanup -s test --all",
    "clean:build": "rimraf build *.tsbuildinfo",
    "clean:cover": "rimraf ../../coverage/cli"
  },
  "dependencies": {
    "@browsery/type-is": "^2.0.1",
    "ansi-colors": "^4.1.3",
    "commander": "^14.0.2",
    "js-string-escape": "^1.0.1",
    "putil-flattentext": "^2.1.1",
    "putil-varhelpers": "^1.6.5",
    "tslib": "^2.8.1"
  },
  "peerDependencies": {
    "@opra/client": "^1.22.0",
    "@opra/common": "^1.22.0"
  },
  "type": "module",
  "module": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=20.0"
  },
  "bin": {
    "oprimp": "bin/oprimp.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/panates/opra.git",
    "directory": "packages/client"
  },
  "keywords": [
    "opra",
    "cli",
    "tool",
    "oprimp"
  ],
  "publishConfig": {
    "access": "public"
  }
}