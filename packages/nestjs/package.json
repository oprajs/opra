{
  "name": "@opra/nestjs",
  "version": "0.0.1",
  "description": "Opra NestJS module",
  "author": "Panates",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/nestjs"
  },
  "scripts": {
    "compile": "tsc",
    "prebuild": "npm run lint && npm run clean",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json",
    "postbuild": "cp README.md package.json ../../LICENSE ../../build/nestjs && cp ../../package.cjs.json ../../build/nestjs/cjs/package.json",
    "lint": "eslint .",
    "test": "jest",
    "cover": "jest --collect-coverage",
    "clean": "npm run clean:src | npm run clean:dist | npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all",
    "clean:dist": "rimraf ../../build/nestjs",
    "clean:cover": "rimraf ../../coverage/nestjs"
  },
  "dependencies": {
    "@opra/url": "^0.x.x",
    "@opra/i18n": "^0.x.x",
    "@opra/core": "^0.x.x",
    "@opra/common": "^0.x.x",
    "fast-tokenizer": "^1.1.0",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.1.13"
  },
  "peerDependencies": {
    "@nestjs/common": "^8.x.x || ^9.x.x"
  },
  "devDependencies": {
    "@nestjs/testing": "^9.0.5",
    "@nestjs/platform-express": "^9.0.5",
    "@types/lodash": "^4.14.182",
    "filedirname": "^2.7.0",
    "supertest": "^6.2.4"
  },
  "type": "module",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "default": "./esm/index.js"
    },
    "./cjs": "./cjs/index.js",
    "./esm": "./esm/index.js"
  },
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "opra",
    "nestjs"
  ]
}
