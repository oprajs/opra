{
  "name": "@opra/nestjs",
  "version": "1.0.0-alpha.11",
  "description": "Opra NestJS module",
  "author": "Panates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/nestjs"
  },
  "scripts": {
    "compile": "tsc",
    "prebuild": "npm run lint && npm run clean",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json",
    "postbuild": "cp README.md package.json ../../LICENSE ../../build/nestjs && cp ../../package.cjs.json ../../build/nestjs/cjs/package.json",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier . --write --log-level=warn",
    "test": "jest --passWithNoTests",
    "cover": "jest --passWithNoTests --collect-coverage",
    "clean": "npm run clean:src && npm run clean:test && npm run clean:dist && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all",
    "clean:test": "ts-cleanup -s test --all",
    "clean:dist": "rimraf ../../build/client",
    "clean:cover": "rimraf ../../coverage/client"
  },
  "dependencies": {
    "@opra/common": "^1.0.0-alpha.11",
    "@opra/core": "^1.0.0-alpha.11",
    "fast-tokenizer": "^1.3.0",
    "lodash.head": "^4.0.1",
    "reflect-metadata": "^0.2.2"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.3.10",
    "@nestjs/core": "^10.3.10"
  },
  "devDependencies": {
    "@nestjs/platform-express": "^10.3.10",
    "@nestjs/testing": "^10.3.10",
    "@types/lodash.head": "^4.0.9",
    "filedirname": "^3.4.0",
    "rxjs": "^7.8.1",
    "supertest": "^7.0.0",
    "ts-gems": "^3.4.0"
  },
  "type": "module",
  "module": "./esm/index.js",
  "main": "./cjs/index.js",
  "types": "./types/index.d.ts",
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "opra",
    "nestjs"
  ]
}
