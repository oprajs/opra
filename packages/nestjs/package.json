{
  "name": "@opra/nestjs",
  "version": "1.8.0",
  "description": "Opra NestJS module",
  "author": "Panates",
  "license": "MIT",
  "scripts": {
    "compile": "tsc --noEmit",
    "prebuild": "npm run lint && npm run clean",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json && cp ../../support/package.cjs.json ../../build/nestjs/cjs/package.json",
    "build:esm": "tsc -b tsconfig-build-esm.json && cp ../../support/package.esm.json ../../build/nestjs/esm/package.json",
    "postbuild": "cp README.md package.json ../../LICENSE ../../build/nestjs && node ../../support/postbuild.cjs",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier . --write --log-level=warn",
    "test": "jest --passWithNoTests",
    "cover": "jest --passWithNoTests --collect-coverage",
    "clean": "npm run clean:src && npm run clean:test && npm run clean:dist && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all",
    "clean:test": "ts-cleanup -s test --all",
    "clean:dist": "rimraf ../../build/nestjs",
    "clean:cover": "rimraf ../../coverage/nestjs"
  },
  "dependencies": {
    "@jsopen/objects": "^1.5.0",
    "@opra/common": "^1.8.0",
    "@opra/core": "^1.8.0",
    "fast-tokenizer": "^1.7.0",
    "putil-promisify": "^1.10.1",
    "reflect-metadata": "^0.2.2",
    "tslib": "^2.8.1"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/core": "^10.0.0 || ^11.0.0"
  },
  "optionalDependencies": {
    "@nestjs/microservices": "^10.0.0 || ^11.0.0",
    "@opra/http": "^1.8.0",
    "@opra/kafka": "^1.8.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.4.0",
    "@nestjs/platform-express": "^11.0.6",
    "@nestjs/microservices": "^11.0.6",
    "@nestjs/testing": "^11.0.6",
    "@types/lodash.head": "^4.0.9",
    "express": "^4.21.2",
    "filedirname": "^3.4.0",
    "kafkajs": "^2.2.4",
    "rxjs": "^7.8.1",
    "supertest": "^7.0.0",
    "ts-gems": "^3.11.3"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./types/index.d.ts",
        "default": "./esm/index.js"
      },
      "require": {
        "types": "./types/index.d.cts",
        "default": "./cjs/index.js"
      },
      "default": "./esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/nestjs"
  },
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "opra",
    "nestjs"
  ]
}