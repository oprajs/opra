{
  "name": "@opra/nestjs",
  "version": "0.25.0",
  "description": "Opra NestJS module",
  "author": "Panates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/nestjs"
  },
  "scripts": {
    "compile": "tsc",
    "prebuild": "npm run lint && npm run clean",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json",
    "postbuild": "cp README.md package.json ../../LICENSE ../../build/nestjs && cp ../../package.cjs.json ../../build/nestjs/cjs/package.json",
    "lint": "eslint . --max-warnings=0",
    "test": "jest",
    "cover": "jest --collect-coverage",
    "clean": "npm run clean:src && npm run clean:dist && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all && ts-cleanup -s test --all",
    "clean:dist": "rimraf ../../build/nestjs",
    "clean:cover": "rimraf ../../coverage/nestjs"
  },
  "dependencies": {
    "@opra/common": "^0.25.0",
    "@opra/core": "^0.25.0",
    "fast-tokenizer": "^1.2.2",
    "lodash.head": "^4.0.1",
    "lodash.identity": "^3.0.0",
    "reflect-metadata": "^0.1.13"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.2.1"
  },
  "devDependencies": {
    "@nestjs/platform-express": "^10.2.1",
    "@nestjs/testing": "^10.2.1",
    "@types/lodash": "^4.14.197",
    "filedirname": "^2.7.0",
    "ts-gems": "^2.4.1"
  },
  "type": "module",
  "module": "./esm/index.js",
  "main": "./cjs/index.js",
  "types": "./types/index.d.ts",
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "opra",
    "nestjs"
  ]
}