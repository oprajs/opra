{
  "name": "@opra/nestjs",
  "version": "0.0.1",
  "description": "Opra NestJS module",
  "author": "Panates",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/nestjs"
  },
  "scripts": {
    "compile": "tsc",
    "prebuild": "npm run check | npm run lint | npm run clean",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json && tsc-esm -p tsconfig-build-esm.json",
    "postbuild": "copyfiles README.md package.json ../../LICENSE ../../build/nestjs | cp ../../package.cjs.json ../../build/nestjs/cjs/package.json",
    "lint": "eslint \"{src,test}/**/*.ts\" --no-error-on-unmatched-pattern",
    "test": "jest",
    "cover": "jest --collect-coverage",
    "check": "madge --circular src/**/*",
    "clean": "npm run clean:src | npm run clean:dist | npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all",
    "clean:dist": "rimraf ../../build/nestjs",
    "clean:cover": "rimraf ../../coverage/nestjs"
  },
  "dependencies": {
    "@opra/url": "^0.x.x",
    "@opra/i18n": "^0.x.x",
    "@opra/core": "^0.x.x",
    "@opra/common": "^0.x.x",
    "lodash": "^4.17.21",
    "i18next": ">=21.0.0",
    "reflect-metadata": "^0.1.13"
  },
  "peerDependencies": {
    "@nestjs/common": "^8.x.x"
  },
  "devDependencies": {
    "@nestjs/testing": "^8.4.5",
    "@nestjs/platform-express": "^8.4.5",
    "@types/lodash": "^4.14.182",
    "filedirname": "^2.7.0",
    "supertest": "^6.2.3"
  },
  "type": "module",
  "main": "cjs/index.js",
  "module": "esm/index.mjs",
  "types": "esm/index.d.ts",
  "exports": {
    ".": {
      "require":  "./cjs/index.js",
      "default": "./esm/index.mjs"
    },
    "./cjs": "./cjs/index.js",
    "./esm": "./esm/index.mjs"
  },
  "engines": {
    "node": ">=14.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "opra",
    "url",
    "query",
    "parser",
    "builder",
    "http",
    "web"
  ]
}
