{
  "name": "@opra/nestjs",
  "version": "1.21.0",
  "description": "Opra NestJS module",
  "author": "Panates",
  "license": "MIT",
  "scripts": {
    "compile": "tsc --noEmit",
    "build": "tsc -b tsconfig-build.json",
    "postbuild": "node ../../support/postbuild.cjs",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier . --write --log-level=warn",
    "check": "madge --circular src/**",
    "test": "mocha",
    "clean": "npm run clean:src && npm run clean:test && npm run clean:build && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all",
    "clean:test": "ts-cleanup -s test --all",
    "clean:build": "rimraf build *.tsbuildinfo",
    "clean:cover": "rimraf ../../coverage/nestjs"
  },
  "dependencies": {
    "@jsopen/objects": "^2.0.2",
    "reflect-metadata": "^0.2.2",
    "tslib": "^2.8.1"
  },
  "peerDependencies": {
    "@opra/common": "^1.21.0",
    "@opra/core": "^1.21.0",
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/core": "^10.0.0 || ^11.0.0",
    "@nestjs/microservices": "^10.0.0 || ^11.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@nestjs/platform-express": "^11.1.10",
    "@nestjs/testing": "^11.1.10",
    "express": "^5.2.1",
    "rxjs": "^7.8.2",
    "supertest": "^7.1.4",
    "ts-gems": "^3.11.3"
  },
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    },
    "./package.json": "./package.json"
  },
  "type": "module",
  "module": "./index.js",
  "types": "./index.d.ts",
  "engines": {
    "node": ">=20.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/panates/opra.git",
    "directory": "packages/nestjs"
  },
  "keywords": [
    "opra",
    "nestjs",
    "common"
  ],
  "publishConfig": {
    "access": "public"
  }
}
