{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "../../build/core/cjs",
    "paths": {
      "@opra/exception": ["../../build/exception"],
      "@opra/i18n": ["../../build/i18n"],
      "@opra/schema": ["../../build/schema"],
      "@opra/url": ["../../build/url"],
      "@opra/optionals": ["../../build/optionals"]
    },
    "sourceMap": false,
    "noEmit": false,
    "declaration": false,
  },
  "include": ["src"]
}
