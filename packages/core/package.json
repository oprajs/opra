{
  "name": "@opra/core",
  "version": "0.27.2",
  "description": "Opra schema package",
  "author": "Panates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/core"
  },
  "scripts": {
    "compile": "tsc",
    "prebuild": "npm run lint && npm run clean",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json",
    "postbuild": "npm run _copyi18n && npm run _copy_pkg_files",
    "_copy_pkg_files": "cp README.md package.json ../../LICENSE ../../build/core && cp ../../package.cjs.json ../../build/core/cjs/package.json",
    "_copyi18n": "cp -R i18n ../../build/core/i18n",
    "lint": "eslint . --max-warnings=0",
    "test": "jest",
    "cover": "jest --collect-coverage",
    "clean": "npm run clean:src && npm run clean:dist && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all && ts-cleanup -s test --all",
    "clean:dist": "rimraf ../../build/core",
    "clean:cover": "rimraf ../../coverage/core"
  },
  "dependencies": {
    "@browsery/type-is": "^0.6.3",
    "@opra/common": "^0.27.2",
    "accepts": "^1.3.8",
    "content-disposition": "^0.5.4",
    "content-type": "^1.0.5",
    "cookie": "^0.5.0",
    "cookie-signature": "^1.2.1",
    "encodeurl": "^1.0.2",
    "formidable": "^3.5.1",
    "fresh": "^0.5.2",
    "mime-types": "^2.1.35",
    "power-tasks": "^1.7.2",
    "putil-isplainobject": "^1.1.5",
    "putil-varhelpers": "^1.6.5",
    "range-parser": "^1.2.1",
    "strict-typed-events": "^2.3.2",
    "vary": "^1.1.2"
  },
  "peerDependencies": {
    "express": "^4.x.x || ^5.x.x"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.2.0",
    "@types/accepts": "^1.3.5",
    "@types/content-disposition": "^0.5.6",
    "@types/content-type": "^1.1.6",
    "@types/cookie": "^0.5.2",
    "@types/cookie-signature": "^1.1.0",
    "@types/encodeurl": "^1.0.0",
    "@types/express": "^4.17.19",
    "@types/formidable": "^3.4.3",
    "@types/fresh": "^0.5.0",
    "@types/mime-types": "^2.1.2",
    "@types/range-parser": "^1.2.5",
    "@types/type-is": "^1.6.4",
    "@types/vary": "^1.1.1",
    "crypto-browserify": "^3.12.0",
    "path-browserify": "^1.0.1",
    "ts-gems": "^2.5.0"
  },
  "type": "module",
  "module": "./esm/index.js",
  "main": "./cjs/index.js",
  "types": "./types/index.d.ts",
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "i18n/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "opra",
    "rest",
    "api",
    "openapi",
    "http",
    "web",
    "swagger",
    "raml"
  ]
}