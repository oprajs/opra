{
  "name": "@opra/core",
  "version": "1.0.0-alpha.7",
  "description": "Opra schema package",
  "author": "Panates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/core"
  },
  "scripts": {
    "compile": "tsc",
    "prebuild": "npm run lint && npm run clean",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json",
    "postbuild": "npm run _copyi18n && npm run _copy_pkg_files",
    "_copy_pkg_files": "cp README.md package.json ../../LICENSE ../../build/core && cp ../../package.cjs.json ../../build/core/cjs/package.json",
    "_copyi18n": "cp -R i18n ../../build/core/i18n",
    "lint": "eslint . --max-warnings=0",
    "check": "madge --circular src/**",
    "format": "prettier . --write --log-level=warn",
    "test": "jest --passWithNoTests",
    "cover": "jest --passWithNoTests --collect-coverage",
    "clean": "npm run clean:src && npm run clean:test && npm run clean:dist && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all",
    "clean:test": "ts-cleanup -s test --all",
    "clean:dist": "rimraf ../../build/client",
    "clean:cover": "rimraf ../../coverage/client"
  },
  "dependencies": {
    "@browsery/type-is": "^1.6.18-r2",
    "@browsery/http-parser": "^0.5.8",
    "@opra/common": "^1.0.0-alpha.7",
    "@types/formidable": "^3.4.5",
    "accepts": "^1.3.8",
    "base64-stream": "^1.0.0",
    "bytes": "^3.1.2",
    "content-disposition": "^0.5.4",
    "content-type": "^1.0.5",
    "cookie": "^0.6.0",
    "cookie-signature": "^1.2.1",
    "cppzst": "^2.0.12",
    "encodeurl": "^2.0.0",
    "formidable": "^3.5.1",
    "fresh": "^0.5.2",
    "iconv-lite": "^0.6.3",
    "mime-types": "^2.1.35",
    "power-tasks": "^1.7.3",
    "putil-isplainobject": "^1.1.5",
    "putil-merge": "^3.12.1",
    "putil-varhelpers": "^1.6.5",
    "range-parser": "^1.2.1",
    "raw-body": "^2.5.2",
    "reflect-metadata": "^0.2.2",
    "strict-typed-events": "^2.3.3",
    "vary": "^1.1.2"
  },
  "optionalDependencies": {
    "express": "^4.x.x || ^5.x.x",
    "fastify": "^4.x.x"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/accepts": "^1.3.7",
    "@types/base64-stream": "^1.0.5",
    "@types/bytes": "^3.1.4",
    "@types/content-disposition": "^0.5.8",
    "@types/content-type": "^1.1.8",
    "@types/cookie": "^0.6.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/cookie-signature": "^1.1.2",
    "@types/encodeurl": "^1.0.2",
    "@types/express": "^4.17.21",
    "@types/fresh": "^0.5.2",
    "@types/mime-types": "^2.1.4",
    "@types/range-parser": "^1.2.7",
    "@types/vary": "^1.1.3",
    "cookie-parser": "^1.4.6",
    "crypto-browserify": "^3.12.0",
    "express": "^4.19.2",
    "fastify": "^4.28.0",
    "path-browserify": "^1.0.1",
    "ts-gems": "^3.4.0",
    "supertest": "^7.0.0"
  },
  "type": "module",
  "module": "./esm/index.js",
  "main": "./cjs/index.js",
  "types": "./types/index.d.ts",
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "i18n/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "opra",
    "rest",
    "api",
    "openapi",
    "http",
    "web",
    "swagger",
    "raml"
  ]
}
