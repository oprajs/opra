{
  "name": "@opra/core",
  "version": "0.7.0",
  "description": "Opra schema package",
  "author": "Panates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/core"
  },
  "scripts": {
    "compile": "tsc",
    "prebuild": "npm run lint && npm run clean",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json",
    "postbuild": "npm run _copyi18n && npm run _copy_pkg_files",
    "_copy_pkg_files": "cp README.md package.json ../../LICENSE ../../build/core && cp ../../package.cjs.json ../../build/core/cjs/package.json",
    "_copyi18n": "cp -R i18n ../../build/core/i18n",
    "lint": "eslint . --max-warnings=0",
    "test": "jest",
    "cover": "jest --collect-coverage",
    "clean": "npm run clean:src && npm run clean:dist && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all",
    "clean:dist": "rimraf ../../build/core",
    "clean:cover": "rimraf ../../coverage/core"
  },
  "dependencies": {
    "@nano-sql/core": "^2.3.7",
    "@opra/common": "^0.7.0",
    "body-parser": "^1.20.1",
    "dicer": "^0.3.1",
    "express": "^4.18.2",
    "http-parser-js": "^0.5.8",
    "lodash": "^4.17.21",
    "power-tasks": "^1.6.1",
    "putil-isplainobject": "^1.1.4",
    "putil-merge": "^3.9.0",
    "putil-varhelpers": "^1.6.4",
    "strict-typed-events": "^2.3.1",
    "ts-gems": "^2.3.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/dicer": "^0.2.2",
    "@types/express": "^4.17.14"
  },
  "type": "module",
  "types": "esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "default": "./esm/index.js"
    },
    "./cjs": "./cjs/index.js",
    "./esm": "./esm/index.js"
  },
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "i18n/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "opra",
    "rest",
    "api",
    "oas",
    "open",
    "swagger",
    "raml",
    "http",
    "web"
  ]
}
