{
  "name": "@opra/angular",
  "version": "1.0.0-alpha.27",
  "description": "Opra internationalization package",
  "author": "Panates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/angular"
  },
  "scripts": {
    "compile": "tsc",
    "prebuild": "npm run check && npm run lint && npm run clean",
    "build": "ng build",
    "postbuild": "cp ../../LICENSE ../../build/angular",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --max-warnings=0 --fix",
    "format": "prettier . --write --log-level=warn",
    "check": "madge --circular src/**",
    "test": "jest --passWithNoTests",
    "cover": "jest --passWithNoTests --collect-coverage",
    "clean": "npm run clean:src && npm run clean:test && npm run clean:dist && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all",
    "clean:test": "ts-cleanup -s test --all",
    "clean:dist": "rimraf ../../build/angular",
    "clean:cover": "rimraf ../../coverage/angular"
  },
  "peerDependencies": {
    "@angular/common": ">= 15.0.0",
    "@angular/core": ">= 15.0.0",
    "@browsery/type-is": "^1.6.18-r3",
    "@opra/client": "^1.0.0-alpha.27",
    "rxjs": "^7.8.1",
    "ts-gems": "^3.0.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.1.2",
    "@angular/cli": "^18.1.2",
    "@angular/compiler": "^18.0.2",
    "@angular/compiler-cli": "^18.1.2",
    "@angular/platform-browser": "^18.0.2",
    "@angular/platform-browser-dynamic": "^18.1.2",
    "@opra/client": "^1.0.0-alpha.27",
    "core-js": "^3.37.1",
    "cross-fetch": "^4.0.0",
    "express": "^4.19.2",
    "ng-packagr": "^18.1.0",
    "superagent": "^9.0.2",
    "supertest": "^7.0.0",
    "ts-gems": "^3.4.0",
    "zone.js": "^0.14.8"
  },
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "keywords": [
    "opra",
    "client",
    "angular",
    "request",
    "fetch"
  ]
}
