{
  "name": "@opra/angular",
  "version": "0.31.6",
  "description": "Opra internationalization package",
  "author": "Panates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/angular"
  },
  "scripts": {
    "compile": "tsc",
    "prebuild": "npm run check && npm run lint && npm run clean",
    "build": "ng build",
    "postbuild": "cp ../../LICENSE ../../build/angular",
    "lint": "eslint . --max-warnings=0",
    "check": "madge --circular src/**",
    "test": "jest",
    "cover": "jest --collect-coverage",
    "clean": "npm run clean:src && npm run clean:test && npm run clean:dist && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all",
    "clean:test": "ts-cleanup -s test --all",
    "clean:dist": "rimraf ../../build/client",
    "clean:cover": "rimraf ../../coverage/client"
  },
  "peerDependencies": {
    "@angular/common": "15.x.x || 16.x.x || 17.x.x",
    "@angular/core": "15.x.x || 16.x.x || || 17.x.x",
    "@opra/client": "^0.31.6",
    "ts-gems": "^2.4.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.1",
    "@angular/cli": "^17.0.1",
    "@angular/compiler": "^17.0.2",
    "@angular/compiler-cli": "^17.0.3",
    "@angular/platform-browser": "^17.0.2",
    "@angular/platform-browser-dynamic": "^17.0.3",
    "core-js": "^3.33.3",
    "cross-fetch": "^4.0.0",
    "express": "^4.18.2",
    "jest-preset-angular": "^13.1.4",
    "ng-packagr": "^17.0.1",
    "ts-gems": "^2.5.0",
    "zone.js": "^0.14.2"
  },
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "keywords": [
    "opra",
    "client",
    "angular",
    "request",
    "fetch"
  ]
}