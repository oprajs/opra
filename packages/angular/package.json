{
  "name": "@opra/angular",
  "version": "0.11.6",
  "description": "Opra internationalization package",
  "author": "Panates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/angular"
  },
  "scripts": {
    "compile": "tsc",
    "prebuild": "npm run check && npm run lint && npm run clean && npm run fix-json",
    "build": "ng build --configuration production",
    "postbuild": "cp ../../LICENSE ../../build/angular",
    "lint": "eslint . --max-warnings=0",
    "check": "madge --circular src/**",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest",
    "cover": "NODE_OPTIONS=--experimental-vm-modules npx jest --collect-coverage",
    "clean": "npm run clean:src && npm run clean:dist && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all && ts-cleanup -s test --all",
    "clean:dist": "rimraf ../../build/angular",
    "clean:cover": "rimraf ../../coverage/angular",
    "fix-json": "node ./tools/fix-dependencies.mjs"
  },
  "peerDependencies": {
    "@angular/common": "^14.2.12 || 15.x.x",
    "@angular/core": "^14.2.12 || 15.x.x",
    "@opra/client": "^0.11.8",
    "ts-gems": "^2.3.0"
  },
  "devDependencies": {
    "core-js": "^3.27.2",
    "cross-fetch": "^3.1.5",
    "express": "^4.18.2",
    "zone.js": "^0.12.0"
  },
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "keywords": [
    "opra",
    "client",
    "angular",
    "request",
    "fetch"
  ]
}
