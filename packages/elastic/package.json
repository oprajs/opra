{
  "name": "@opra/elastic",
  "version": "1.0.0-alpha.32",
  "description": "Opra Elastic Search adapter package",
  "author": "Panates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/elastic"
  },
  "scripts": {
    "compile": "tsc",
    "prebuild": "npm run lint && npm run clean",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json",
    "postbuild": "cp README.md package.json ../../LICENSE ../../build/elastic && cp ../../package.cjs.json ../../build/elastic/cjs/package.json",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --max-warnings=0 --fix",
    "format": "prettier . --write --log-level=warn",
    "test": "jest --passWithNoTests",
    "cover": "jest --passWithNoTests --collect-coverage",
    "clean": "npm run clean:src && npm run clean:test && npm run clean:dist && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all",
    "clean:test": "ts-cleanup -s test --all",
    "clean:dist": "rimraf ../../build/client",
    "clean:cover": "rimraf ../../coverage/client"
  },
  "dependencies": {
    "putil-isplainobject": "^1.1.5",
    "tslib": "^2.6.3"
  },
  "devDependencies": {
    "@elastic/elasticsearch": "^8.14.0",
    "@faker-js/faker": "^8.4.1",
    "ts-gems": "^3.4.0"
  },
  "peerDependencies": {
    "@elastic/elasticsearch": ">=8.7.0",
    "@opra/common": "^1.0.0-alpha.32",
    "@opra/core": "^1.0.0-alpha.32"
  },
  "type": "module",
  "module": "./esm/index.js",
  "main": "./cjs/index.js",
  "types": "./types/index.d.ts",
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "opra",
    "elastic",
    "elasticsearch",
    "adapter"
  ]
}
