{
  "name": "@opra/url",
  "version": "0.3.1",
  "description": "Opra URL parser/builder",
  "author": "Panates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/url"
  },
  "scripts": {
    "compile": "tsc",
    "prebuild": "npm run check && npm run lint && npm run clean",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -b tsconfig-build-esm.json",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "postbuild": "cp README.md package.json ../../LICENSE ../../build/url && cp ../../package.cjs.json ../../build/url/cjs/package.json",
    "lint": "eslint .",
    "check": "madge --circular src/**",
    "test": "jest",
    "cover": "jest --collect-coverage",
    "clean": "npm run clean:src && npm run clean:dist && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all",
    "clean:dist": "rimraf ../../build/url",
    "clean:cover": "rimraf ../../coverage/url",
    "antlr": "antlr4ts -visitor -no-listener src/filter/antlr/OpraFilter.g4"
  },
  "dependencies": {
    "@opra/common": "^0.3.1",
    "antlr4ts": "^0.5.0-alpha.4",
    "fast-tokenizer": "^1.2.0",
    "luxon": "^3.0.4"
  },
  "devDependencies": {
    "@types/luxon": "^3.0.2",
    "antlr4ts-cli": "^0.5.0-alpha.4"
  },
  "type": "module",
  "types": "esm/index.d.ts",
  "exports": {
    ".": "./cjs/index.js",
    "./cjs": "./cjs/index.js",
    "./esm": "./esm/index.js"
  },
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "opra",
    "url",
    "query",
    "parser",
    "builder",
    "http",
    "web"
  ]
}