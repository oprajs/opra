{
  "name": "@opra/testing",
  "version": "0.17.1",
  "description": "Opra testing package",
  "author": "Panates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/testing"
  },
  "scripts": {
    "compile": "tsc",
    "prebuild": "npm run lint && npm run clean",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json",
    "postbuild": "cp README.md package.json ../../LICENSE ../../build/testing && cp ../../package.cjs.json ../../build/testing/cjs/package.json",
    "lint": "eslint .",
    "test": "jest",
    "cover": "jest --collect-coverage",
    "clean": "npm run clean:src && npm run clean:dist && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all && ts-cleanup -s test --all",
    "clean:dist": "rimraf ../../build/testing",
    "clean:cover": "rimraf ../../coverage/testing"
  },
  "dependencies": {
    "@opra/common": "^0.17.1",
    "@opra/client": "^0.17.1",
    "ansi-colors": "^4.1.3",
    "lodash.isnil": "^4.0.0",
    "lodash.omitby": "^4.6.0",
    "rule-judgment": "^1.1.5"
  },
  "devDependencies": {
    "@types/supertest": "^2.0.12"
  },
  "type": "module",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "default": "./esm/index.js"
    },
    "./cjs": "./cjs/index.js",
    "./esm": "./esm/index.js"
  },
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "opra",
    "testing"
  ]
}
