{
  "name": "@opra/mongodb",
  "version": "1.0.0-alpha.10",
  "description": "Opra MongoDB adapter package",
  "author": "Panates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/mongodb"
  },
  "scripts": {
    "compile": "tsc",
    "prebuild": "npm run lint && npm run clean",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json",
    "postbuild": "cp README.md package.json ../../LICENSE ../../build/mongodb && cp ../../package.cjs.json ../../build/mongodb/cjs/package.json",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --max-warnings=0 --fix",
    "format": "prettier . --write --log-level=warn",
    "test": "jest --passWithNoTests",
    "cover": "jest --passWithNoTests --collect-coverage",
    "clean": "npm run clean:src && npm run clean:dist && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all && ts-cleanup -s test --all",
    "clean:dist": "rimraf ../../build/mongodb",
    "clean:cover": "rimraf ../../coverage/mongodb"
  },
  "dependencies": {
    "lodash.omit": "^4.5.0",
    "putil-isplainobject": "^1.1.5"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "mongodb": "^6.8.0",
    "ts-gems": "^3.4.0"
  },
  "peerDependencies": {
    "@opra/common": "^1.0.0-alpha.10",
    "@opra/core": "^1.0.0-alpha.10",
    "mongodb": ">= 6.0.0"
  },
  "type": "module",
  "module": "./esm/index.js",
  "main": "./cjs/index.js",
  "types": "./types/index.d.ts",
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "opra",
    "mongodb",
    "adapter"
  ]
}
