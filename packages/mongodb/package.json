{
  "name": "@opra/mongodb",
  "version": "1.22.3",
  "description": "Opra MongoDB adapter package",
  "author": "Panates",
  "license": "MIT",
  "scripts": {
    "compile": "tsc --noEmit",
    "prebuild": "npm run check && npm run lint && npm run clean",
    "build": "tsc -b tsconfig-build.json",
    "postbuild": "node ../../support/postbuild.cjs",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --max-warnings=0 --fix",
    "format": "prettier . --write --log-level=warn",
    "check": "madge --circular src/**",
    "test": "mocha",
    "clean": "npm run clean:src && npm run clean:test && npm run clean:build && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all",
    "clean:test": "ts-cleanup -s test --all",
    "clean:build": "rimraf build *.tsbuildinfo",
    "clean:cover": "rimraf ../../coverage/mongodb"
  },
  "dependencies": {
    "@jsopen/objects": "^2.0.2",
    "tslib": "^2.8.1",
    "valgen": "^5.18.2"
  },
  "peerDependencies": {
    "@opra/common": "^1.22.3",
    "@opra/core": "^1.22.3",
    "@opra/http": "^1.22.3",
    "mongodb": "^7.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "mongodb": "^6.0.0 || ^7.0.0",
    "expect": "^30.2.0",
    "sinon": "^21.0.1",
    "ts-gems": "^3.11.3"
  },
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    },
    "./package.json": "./package.json"
  },
  "type": "module",
  "module": "./index.js",
  "types": "./index.d.ts",
  "engines": {
    "node": ">=20.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/panates/opra.git",
    "directory": "packages/mongodb"
  },
  "keywords": [
    "opra",
    "mongodb",
    "adapter"
  ],
  "publishConfig": {
    "access": "public"
  }
}