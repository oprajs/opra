{
  "name": "@opra/mongodb",
  "version": "1.11.0",
  "description": "Opra MongoDB adapter package",
  "author": "Panates",
  "license": "MIT",
  "scripts": {
    "compile": "tsc --noEmit",
    "prebuild": "npm run lint && npm run clean",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json && cp ../../support/package.cjs.json ../../build/mongodb/cjs/package.json",
    "build:esm": "tsc -b tsconfig-build-esm.json && cp ../../support/package.esm.json ../../build/mongodb/esm/package.json",
    "postbuild": "cp README.md package.json ../../LICENSE ../../build/mongodb && node ../../support/postbuild.cjs",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --max-warnings=0 --fix",
    "format": "prettier . --write --log-level=warn",
    "test": "jest --passWithNoTests",
    "cover": "jest --passWithNoTests --collect-coverage",
    "clean": "npm run clean:src && npm run clean:dist && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all && ts-cleanup -s test --all",
    "clean:dist": "rimraf ../../build/mongodb",
    "clean:cover": "rimraf ../../coverage/mongodb"
  },
  "dependencies": {
    "@jsopen/objects": "^1.5.0",
    "tslib": "^2.8.1",
    "valgen": "^5.13.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.5.0",
    "mongodb": "^6.13.1",
    "ts-gems": "^3.11.3"
  },
  "peerDependencies": {
    "@opra/common": "^1.11.0",
    "@opra/core": "^1.11.0",
    "@opra/http": "^1.11.0",
    "mongodb": "^6.0.0"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./types/index.d.ts",
        "default": "./esm/index.js"
      },
      "require": {
        "types": "./types/index.d.cts",
        "default": "./cjs/index.js"
      },
      "default": "./esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/mongodb"
  },
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "opra",
    "mongodb",
    "adapter"
  ]
}