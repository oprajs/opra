{
  "name": "@opra/i18n",
  "version": "0.0.1",
  "description": "Opra internationalization package",
  "author": "Panates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/i18n"
  },
  "scripts": {
    "compile": "tsc",
    "prebuild": "npm run check | npm run lint | npm run clean",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json && tsc-esm -p tsconfig-build-esm.json",
    "postbuild": "copyfiles README.md package.json ../../LICENSE ../../build/i18n | cp ../../package.cjs.json ../../build/i18n/cjs/package.json",
    "lint": "eslint {src,test}/**/*.ts --no-error-on-unmatched-pattern",
    "test": "jest",
    "cover": "jest --collect-coverage",
    "check": "madge --circular src/**/*",
    "clean": "npm run clean:src | npm run clean:dist | npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all",
    "clean:dist": "rimraf ../../build/i18n",
    "clean:cover": "rimraf ../../coverage/i18n"
  },
  "dependencies": {
    "ts-gems": "^2.2.0",
    "fast-tokenizer": "^1.1.0",
    "i18next": "^21.8.14"
  },
  "type": "module",
  "main": "cjs/index.js",
  "module": "esm/index.mjs",
  "types": "esm/index.d.ts",
  "exports": {
    ".": {
      "require":  "./cjs/index.js",
      "default": "./esm/index.mjs"
    },
    "./cjs": "./cjs/index.js",
    "./esm": "./esm/index.mjs"
  },
  "engines": {
    "node": ">=14.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "opra",
    "url",
    "query",
    "parser",
    "builder",
    "http",
    "web"
  ]
}
