{
  "extends": "../../tsconfig-base.json",
  "include": ["src"],
  "exclude": ["build"],
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {
      "@opra/common": ["../common/src"],
      "@opra/core": ["../core/src"],
      "@opra/kafka": ["../kafka/src"],
      "@opra/nestjs": ["../nestjs/src"]
    }
  },
  "references": [
    { "path": "../common" },
    { "path": "../core" },
    { "path": "../kafka" },
    { "path": "../nestjs" }
  ]
}
