{
  "name": "@opra/client",
  "version": "0.3.0",
  "description": "Opra internationalization package",
  "author": "Panates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/client"
  },
  "scripts": {
    "compile": "tsc",
    "prebuild": "npm run check && npm run lint && npm run clean",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json",
    "postbuild": "cp README.md package.json ../../LICENSE ../../build/client && cp ../../package.cjs.json ../../build/client/cjs/package.json",
    "lint": "eslint . --max-warnings=0",
    "check": "madge --circular src/**",
    "test": "jest --runInBand --detectOpenHandles",
    "cover": "jest --collect-coverage",
    "clean": "npm run clean:src && npm run clean:dist && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all",
    "clean:dist": "rimraf ../../build/client",
    "clean:cover": "rimraf ../../coverage/client"
  },
  "dependencies": {
    "@opra/url": "^0.3.0",
    "@opra/exception": "^0.3.0",
    "@opra/schema": "^0.3.0",
    "axios": "^1.1.3",
    "putil-isplainobject": "^1.1.4",
    "rxjs": "^7.5.7",
    "ts-gems": "^2.3.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.186"
  },
  "type": "module",
  "types": "esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "default": "./esm/index.js"
    },
    "./cjs": "./cjs/index.js",
    "./esm": "./esm/index.js"
  },
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "opra",
    "client",
    "request",
    "axios",
    "fetch"
  ]
}
