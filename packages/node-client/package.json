{
  "name": "@opra/node-client",
  "version": "0.14.0",
  "description": "Opra NodeJS client package",
  "author": "Panates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/client"
  },
  "scripts": {
    "compile": "tsc",
    "prebuild": "npm run check && npm run lint && npm run clean",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json",
    "postbuild": "cp README.md package.json ../../LICENSE ../../build/node-client && cp ../../package.cjs.json ../../build/node-client/cjs/package.json",
    "lint": "eslint . --max-warnings=0",
    "check": "madge --circular src/**",
    "test": "jest",
    "cover": "jest --collect-coverage",
    "clean": "npm run clean:src && npm run clean:dist && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all",
    "clean:dist": "rimraf ../../build/node-client ../../build/client",
    "clean:cover": "rimraf ../../coverage/client"
  },
  "dependencies": {
    "@opra/common": "^0.14.0",
    "putil-isplainobject": "^1.1.5",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@types/highland": "^2.12.14",
    "@types/lodash": "^4.14.194",
    "assert": "^2.0.0",
    "body-parser": "^1.20.2",
    "buffer": "^6.0.3",
    "events": "^3.3.0",
    "express": "^4.18.2",
    "path": "^0.12.7",
    "path-browserify": "^1.0.1",
    "stream-browserify": "^3.0.0",
    "ts-gems": "^2.3.0",
    "url": "^0.11.0",
    "util": "^0.12.5"
  },
  "type": "module",
  "types": "esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "default": "./esm/index.js"
    }
  },
  "engines": {
    "node": ">=18.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "opra",
    "node",
    "client",
    "http",
    "request",
    "fetch"
  ]
}
