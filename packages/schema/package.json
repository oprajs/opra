{
  "name": "@opra/schema",
  "version": "0.3.0",
  "description": "Opra internationalization package",
  "author": "Panates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/opra.git",
    "directory": "packages/schema"
  },
  "scripts": {
    "compile": "tsc",
    "prebuild": "npm run check && npm run lint && npm run clean",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json",
    "postbuild": "cp README.md package.json ../../LICENSE ../../build/schema && cp ../../package.cjs.json ../../build/schema/cjs/package.json",
    "lint": "eslint . --max-warnings=0",
    "check": "madge --circular src/**",
    "test": "jest --runInBand --detectOpenHandles",
    "cover": "jest --collect-coverage",
    "clean": "npm run clean:src && npm run clean:dist && npm run clean:cover",
    "clean:src": "ts-cleanup -s src --all",
    "clean:dist": "rimraf ../../build/schema",
    "clean:cover": "rimraf ../../coverage/schema"
  },
  "dependencies": {
    "@opra/exception": "^0.3.0",
    "@opra/i18n": "^0.3.0",
    "@opra/url": "^0.3.0",
    "lodash": "^4.17.21",
    "putil-isplainobject": "^1.1.4",
    "putil-merge": "^3.9.0",
    "putil-varhelpers": "^1.6.4",
    "reflect-metadata": "^0.1.13",
    "ts-gems": "^2.3.0"
  },
  "devDependencies": {
    "@sqb/connect": "^4.5.5",
    "@types/lodash": "^4.14.186",
    "@types/reflect-metadata": "^0.1.0"
  },
  "type": "module",
  "types": "esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "default": "./esm/index.js"
    },
    "./cjs": "./cjs/index.js",
    "./esm": "./esm/index.js"
  },
  "engines": {
    "node": ">=16.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "opra",
    "schema"
  ]
}
