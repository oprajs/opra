{
  "extends": "../tsconfig-base.json",
  "include": ["**/*.ts"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNEXT",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@opra/common": ["../packages/common/src"],
      "@opra/core": ["../packages/core/src"],
      "@opra/http": ["../packages/http/src"],
      "@opra/mongodb": ["../packages/mongodb/src"],
      "@opra/sqb": ["../packages/sqb/src"],
      "@opra/nestjs": ["../packages/nestjs/src"],
      "customer-elastic": ["./_lib/customer-elastic"],
      "customer-mongo": ["./_lib/customer-mongo"],
      "customer-sqb": ["./_lib/customer-sqb"]
    },
    "emitDecoratorMetadata": true
  }
}
